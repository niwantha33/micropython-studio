{
  "name": "micropython-ide",
  "displayName": "MicroPython IDE",
  "description": "MicroPython IDE for VS Code",
  "version": "0.2.7",
  "publisher": "Niwantha Meepage",
  "repository": {
    "type": "git",
    "url": "https://github.com/niwantha33/micropython-studio.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand: micropython-ide.setupEnvironment",
    "onCommand: micropython-ide.refreshMcuFolder",
    "onCommand: micropython-ide.openShell",
    "onCommand: micropython-ide.mountMcuFolder",
    "onCommand: micropython-ide.openExistingProjectFolder"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "micropython-ide-launch",
          "title": "Launch MicroPython Studio",
          "icon": "resource/icon.svg"
        }
      ]
    },
    "views": {
      "micropython-ide-launch": [
        {
          "id": "micropython-ide-launch-view",
          "name": "MicroPython Studio"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "micropython-ide-launch-view",
        "contents": "Welcome to MicroPython Studio!\n[Setup Environment](command:micropython-ide.setupEnvironment)\n[Create A Project](command:micropython-ide.createNewProject)\n\n[Refresh Device Files](command:micropython-ide.refreshMcuFolder)\n\n[Update Device Port](command:micropython-ide.updateDevicePort)",
        "when": "true"
      }
    ],
    "commands": [
      {
        "command": "micropython-ide.updateDevicePort",
        "title": "Open MicroPython Project"
      },
      {
        "command": "micropython-ide.openExistingProjectFolder",
        "title": "Open MicroPython Project"
      },
      {
        "command": "micropython-ide.launchIde",
        "title": "Launch MicroPython Studio"
      },
      {
        "command": "micropython-ide.syncMcuFolder",
        "title": "MicroPython: Sync Logic->Mcu Files"
      },
      {
        "command": "micropython-ide.setupEnvironment",
        "title": "MicroPython: Setup Development Environment"
      },
      {
        "command": "micropython-ide.createNewProject",
        "title": "MicroPython: Create a New Project"
      },
      {
        "command": "micropython-ide.refreshMcuFolder",
        "title": "MicroPython: _Refresh Project"
      },
      {
        "command": "micropython-ide.mountMcuFolder",
        "title": "MicroPython: Mount Device"
      },
      {
        "command": "micropython-ide.unmountMcuFolder",
        "title": "MicroPython: Unmount Device"
      },
      {
        "command": "micropython-ide.runThisScriptOnMcuConsole",
        "title": "MicroPython: Run Current Script on MCU"
      },
      {
        "command": "micropython-ide.stopRun",
        "title": "MicroPython: Stop Running Script on MCU"
      },
      {
        "command": "micropython-ide.openShell",
        "title": "MicroPython: Open Device Shell"
      },
      {
        "command": "micropython-ide.codeflow",
        "title": "MicroPython: CodeFlow Graph"
      },
      {
        "command": "micropython-ide.copToLogicFolder",
        "title": "Micropython: Copy to Logic Device"
      },
      {
        "command": "micropython-ide.copyToMainProject",
        "title": "Micropython: Copy to Project"
      },
      {
        "command": "micropython-ide.copyToMcuDevice",
        "title": "Micropython: Copy to Microcontroller"
      },
      {
        "command": "micropython-ide.removeFileOrFolder",
        "title": "Micropython: Remove This From Mcu"
      },
      {
        "command": "micropython-ide.createFolderInMcu",
        "title": "Micropython: Create This Folder In Mcu"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "micropython-ide.refreshMcuFolder",
          "when": "explorerResourceIsFolder && resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.mountMcuFolder",
          "when": "explorerResourceIsFolder && resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.unmountMcuFolder",
          "when": "explorerResourceIsFolder && resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.launchIde",
          "when": "view == micropython-ide-launch",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.codeflow",
          "when": "!explorerResourceIsFolder && !(resource =~ /mcu_.*/)",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.copToLogicFolder",
          "when": "!(resource =~ /mcu_.*/)",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.copyToMainProject",
          "when": "resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.copyToMcuDevice",
          "when": "resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.removeFileOrFolder",
          "when": "resource =~ /mcu_.*/",
          "group": "navigation"
        },
        {
          "command": "micropython-ide.createFolderInMcu",
          "when": "resource =~ /mcu_.*/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "ws": "^8.18.3"
  }
}