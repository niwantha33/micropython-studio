{
  "name": "micropython-ide",
  "displayName": "MicroPython IDE",
  "description": "MicroPython IDE for VS Code",
  "version": "0.2.8",
  "publisher": "Niwantha Meepage",
  "repository": {
    "type": "git",
    "url": "https://github.com/niwantha33/micropython-studio.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [   
   
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "micropython-ide-launch",
          "title": "Launch MicroPython Studio",
          "icon": "resource/icon.svg"
        }
      ]
    },
    "views": {
      "micropython-ide-launch": [
        {
          "id": "micropython-ide-launch-view",
          "name": "MicroPython Studio"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "micropython-ide-launch-view",
        "contents": "Welcome to MicroPython Studio!\n[Setup Environment](command:micropython-ide.setupEnvironment)\n[Create A Project](command:micropython-ide.createNewProject)\n[Start Debug](command:micropython-ide.startDebug)\n\n[Refresh Device Files](command:micropython-ide.refreshMcuFolder)\n\n[Update Device Port](command:micropython-ide.updateDevicePort)",
        "when": "true"
      }
    ],
    "commands": [
      {
        "command": "micropython-ide.setupEnvironment",
        "title": "MicroPython: Setup Development Environment",
        "category": "MicroPython IDE"
      },
      {
        "command": "micropython-ide.createNewProject",
        "title": "MicroPython: Create New Project",
        "category": "MicroPython IDE"
      } ,
      {
        "command": "micropython-ide.refreshMcuFolder",
        "title": "MicroPython: Refresh Project",
        "category": "MicroPython IDE"
      },  
      {
        "command": "micropython-ide.openShell",
        "title": "MicroPython: Open Micropython Shell",
        "category": "MicroPython IDE"
      },
      {
        "command": "micropython-ide.mountMainFolder",
        "title": "MicroPython: Mount Device to main Folder",
        "category": "MicroPython IDE"
      },
       {
        "command": "micropython-ide.unmoutFolder",
        "title": "MicroPython: Unmount Device from main Folder",
        "category": "MicroPython IDE"
      }      
      
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "micropython-ide.setupEnvironment",
          "when": "true"
        },
        {
          "command": "micropython-ide.createNewProject",
          "when": "true"
        },
        {
          "command": "micropython-ide.refreshMcuFolder",
          "when": "false"
        },
        {
          "command": "micropython-ide.openShell",
          "when": "true"
        },
        {
          "command": "micropython-ide.mountMainFolder",
          "when": "true"
        }
      ],
       "explorer/context": [
        {
          "command": "micropython-ide.refreshMcuFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "axios": "^1.10.0",
    "fs-extra": "^11.3.1",
    "moment": "^2.30.1",
    "serialport": "^12.0.0",
    "ws": "^8.18.3"
  }
}

 