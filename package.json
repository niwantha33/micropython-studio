{
  "name": "micropython-ide",
  "displayName": "MicroPython IDE",
  "description": "MicroPython IDE for VS Code",
  "version": "0.2.7",
  "publisher": "Niwantha Meepage",
  "repository": {
    "type": "git",
    "url": "https://github.com/niwantha33/micropython-studio.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand: micropython-ide.setupEnvironment"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "micropython-ide-launch",
          "title": "Launch MicroPython Studio",
          "icon": "resource/icon.svg"
        }
      ]
    },
    "views": {
      "micropython-ide-launch": [
        {
          "id": "micropython-ide-launch-view",
          "name": "MicroPython Studio"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "micropython-ide-launch-view",
        "contents": "Welcome to MicroPython Studio!\n[Setup Environment](command:micropython-ide.setupEnvironment)\n[Create A Project](command:micropython-ide.createNewProject)\n\n[Refresh Device Files](command:micropython-ide.refreshMcuFolder)\n\n[Update Device Port](command:micropython-ide.updateDevicePort)",
        "when": "true"
      }
    ],
    "commands": [    
      {
        "command": "micropython-ide.setupEnvironment",
        "title": "MicroPython: Setup Development Environment"
      }
    ],
    "menus": {
      "explorer/context": [
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "ws": "^8.18.3"
  }
}